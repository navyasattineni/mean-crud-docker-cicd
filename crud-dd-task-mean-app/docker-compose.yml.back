version: "3.8"

services:
  backend:
    build: ./backend
    image: navyasattineni/mean-backend:latest
    container_name: backend
    network_mode: "host"
    restart: unless-stopped

  frontend:
    build: ./frontend
    image: navyasattineni/mean-frontend:latest
    container_name: frontend
    ports: ["80:80"]
    restart: unless-stopped

